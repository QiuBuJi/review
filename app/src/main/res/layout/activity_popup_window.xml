<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_black"
    android:padding="4dp">

    <TextView
        android:id="@+id/popupWindow_textView_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:text="everybody good is realy good."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips"
        android:textColor="#00BFA5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/popupWindow_textView_txt"
        app:layout_constraintStart_toStartOf="@+id/popupWindow_textView_txt"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
